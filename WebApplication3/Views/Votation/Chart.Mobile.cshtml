                labels: ['PDC', 'MNR', 'FPV', 'ABDN', 'MAS', 'PANBOL', 'MTS', 'UCS', 'CC'],
                datasets: [{
                    label: 'Votes',
                    data: [12, 19, 3, 5, 1, 3, 10, 11, 30],
                    backgroundColor: [
                        'rgba(0,128,128)',
                        'rgba(255,0,255)',
                        'rgba(218,165,32)',
                        'rgba(124,252,0)',
                        'rgba(0,191,255)',
                        'rgba(255,0,0)',
                        'rgba(34,139,34)',
                        'rgba(0,0,255)',
                        'rgba(153,50,204)'
                    ],
                    borderColor: [
                        'rgba(0,0,0)',
                        'rgba(0,0,0)',
                        'rgba(0,0,0)',
                        'rgba(0,0,0)',
                        'rgba(0,0,0)',
                        'rgba(0,0,0)',
                        'rgba(0,0,0)',
                        'rgba(0,0,0)',
                        'rgba(0,0,0)'
                    ],
                    borderWidth: 3
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        });
    </script>

</body>
</html>